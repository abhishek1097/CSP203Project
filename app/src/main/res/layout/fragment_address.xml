<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    tools:context="menu.AddressFragment">

    <!-- TODO: Update blank fragment layout -->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/yug"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/yugandhar"
        app:civ_border_color="#232528"
        app:civ_border_width="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/ans_usr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/yug"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:text="Yugandhar Bandi"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/ph_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="09494555549"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/ans_usr_name"
        android:layout_alignEnd="@+id/yug"
        android:layout_marginEnd="70dp" />

    <TextView
        android:id="@+id/ph_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ph_num1"
        android:layout_below="@+id/ph_num1"
        android:text="Mobile"
        android:textColor="#4c5e7c"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFF"
        app:srcCompat="@drawable/call"
        android:layout_alignTop="@+id/ph_num1"
        android:layout_toStartOf="@+id/ph_num1"
        android:layout_marginEnd="7dp" />

    <ImageButton
        android:id="@+id/edit_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="#FFF"
        android:backgroundTint="#FFF"
        app:srcCompat="@drawable/edit"
        android:layout_alignTop="@+id/ph_num1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton4"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:text="Room no 302, Jupiter Hostel"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/address"
        android:layout_below="@+id/address"
        android:layout_marginEnd="9dp"
        android:text="Address"
        android:textColor="#4c5e7c"/>

    <ImageView
        android:id="@+id/address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/edit"
        android:layout_alignTop="@+id/address"
        android:layout_alignStart="@+id/edit_ph" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/address2"
        android:layout_below="@+id/address2"
        android:layout_marginTop="37dp"
        android:text="2015csb1009@iitrpr.ac.in"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/mail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mail"
        android:layout_below="@+id/mail"
        android:text="Email"
        android:textColor="#4c5e7c"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFF"
        app:srcCompat="@drawable/ic_mail_black_24dp"
        android:layout_alignBottom="@+id/mail2"
        android:layout_alignStart="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/address"
        android:backgroundTint="#FFF"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/mail_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:backgroundTint="#FFF"
        app:srcCompat="@drawable/edit"
        android:layout_alignTop="@+id/mail"
        android:layout_alignStart="@+id/address_edit" />

    <ImageButton
        android:id="@+id/camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yug"
        android:layout_alignEnd="@+id/yug"
        android:background="@drawable/round_button"
        android:backgroundTint="#FFF"
        app:srcCompat="@drawable/ic_menu_camera" />

</RelativeLayout>
