<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_for_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.fazooz.Fazooz"
    tools:showIn="@layout/app_bar_fazooz"
    android:clickable="true"
    android:background="#e8edf7">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp">

        <ViewFlipper
            android:id="@+id/bckgrndViewFlipper1"
            android:layout_width="fill_parent"
            android:layout_height="3000dp">


            <ImageView
                android:id="@+id/bckgrndImageView5"
                android:layout_width="fill_parent"
                android:layout_height="302dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cake" />

            <ImageView
                android:id="@+id/bckgrndImageView6"
                android:layout_width="fill_parent"
                android:layout_height="302dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coldcake" />

            <ImageView
                android:id="@+id/bckgrndImageView1"
                android:layout_width="fill_parent"
                android:layout_height="302dp"
                android:scaleType="centerCrop"
                android:src="@drawable/download1" />

            <ImageView
                android:id="@+id/bckgrndImageView4"
                android:layout_width="fill_parent"
                android:layout_height="302dp"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/download2" />

            <ImageView
                android:id="@+id/bckgrndImageView3"
                android:layout_width="fill_parent"
                android:layout_height="302dp"
                android:scaleType="centerCrop"
                android:src="@drawable/download4" />

            <ImageView
                android:id="@+id/bckgrndImageView2"
                android:layout_width="fill_parent"
                android:layout_height="302dp"
                android:scaleType="centerCrop"
                android:src="@drawable/download3" />


        </ViewFlipper>


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="318dp">

    <Button
        android:id="@+id/button7"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_weight="0.10"
        android:text="PLACE ORDER"
        android:textSize="25dp"
        android:onClick="init1"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="398dp"
       >

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_weight="0.10"
            android:text="CURRENT ORDER"
            android:textSize="25dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="init2"/>


    </LinearLayout>
</RelativeLayout>
